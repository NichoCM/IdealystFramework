  "devDependencies": {
    "@types/react": "^19.1.0",
    "rollup": "^3.20.0",
    "rollup-plugin-typescript2": "^0.34.0",
    "typescript": "^5.0.0"
  },
  "files": [
    "src"
  ],
  "keywords": [
    "theme",
    "styling",
