{
  "name": "@idealyst/theme",
  "version": "1.0.19",
  "description": "Theming system for Idealyst Framework",
  "main": "src/index.ts",
  "module": "src/index.ts",
  "types": "src/index.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/idealyst-framework.git",
    "directory": "packages/theme"
  },
  "author": "Your Name <your.email@example.com>",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "exports": {
